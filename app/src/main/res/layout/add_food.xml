<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SecondScreen"
    >

    <TextView
        android:id="@+id/foodtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="71dp"
        android:text="Food"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/itemNameEditText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calorietextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="40dp"
        android:text="Calories"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/itemCalorieEditText"
        app:layout_constraintTop_toBottomOf="@+id/foodtextView" />

    <EditText
        android:id="@+id/itemNameEditText"
        android:layout_width="217dp"
        android:layout_height="48dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="39dp"
        android:hint="Item Name"
        android:lines="1"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/itemCalorieEditText"
        android:layout_width="220dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="36dp"
        android:hint="Enter Calorie"
        android:inputType="numberDecimal"
        android:lines="1"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemNameEditText" />

    <Button
        android:id="@+id/recordButton"
        android:layout_width="230dp"
        android:layout_height="53dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="24dp"
        android:text="RECORD THIS FOOD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemCalorieEditText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="101dp"
        android:text="Add Your Favorite Food!!"
        android:textColor="@color/red"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>